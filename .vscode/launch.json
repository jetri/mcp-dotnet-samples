{
  "version": "0.2.0",
  "configurations": [

    {
      "name": ".NET Launch (AwesomeCopilot)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/awesome-copilot/src/McpSamples.AwesomeCopilot.HybridApp/bin/Debug/net9.0/McpSamples.AwesomeCopilot.HybridApp.dll",
      "args": ["--", "--http"],
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "launchSettingsProfile": "http",
      "cwd": "${workspaceFolder}/awesome-copilot/src/McpSamples.AwesomeCopilot.HybridApp",
      "stopAtEntry": false,
      "console": "internalConsole"
    }
  ]
}
