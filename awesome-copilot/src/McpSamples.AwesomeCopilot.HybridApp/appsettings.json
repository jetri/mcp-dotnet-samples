{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "UseHttp": false,

  // ============================================================================
  // GitHub Repository Configuration
  // ============================================================================
  // These settings configure the GitHub repository from which to fetch files.
  //
  // IMPORTANT: The "Token" property is intentionally OMITTED from this file
  // for security reasons. It must be provided via environment variables:
  //   - Development: Set GITHUB__TOKEN in .env file (not committed)
  //   - Production: Inject GITHUB__TOKEN via container platform
  //
  // Environment Variable Override Convention:
  //   - Any setting here can be overridden with environment variables
  //   - Use double underscores (__) for hierarchy: GITHUB__REPOSITORYOWNER
  //   - Environment variables take precedence over these values
  //
  // Example:
  //   To override RepositoryOwner for production:
  //   Set environment variable: GITHUB__REPOSITORYOWNER=myorg
  //   This will override "github" below
  "GitHub": {
    // GitHub repository owner (organization or username)
    // Can be overridden with: GITHUB__REPOSITORYOWNER
    "RepositoryOwner": "github",

    // GitHub repository name
    // Can be overridden with: GITHUB__REPOSITORYNAME
    "RepositoryName": "awesome-copilot",

    // Branch to fetch files from
    // Can be overridden with: GITHUB__BRANCH
    "Branch": "main"

    // NOTE: "Token" is intentionally NOT included here
    // It MUST be provided via GITHUB__TOKEN environment variable
    // The application will fail at startup if GITHUB__TOKEN is not set
  }
}
